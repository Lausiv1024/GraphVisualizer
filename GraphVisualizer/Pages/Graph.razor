    {
        if(SelectedNode.ToEdges.Where(x=>x.ID == edge.ID).Count() > 0)
        {
            if(SelectedToEdge.ID == edge.ID)
            {
                SelectedToEdge = null;
            } 
            StateHasChanged();
        }
        await JSRuntime.InvokeVoidAsync("removeAtId", edge.ID);
    }
