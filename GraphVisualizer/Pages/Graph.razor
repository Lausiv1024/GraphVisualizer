        get{
            if(controlChecked == "checked")
            {
                return true;
            }
            else
            {
                return false;
            }
        }
        set
        {
            controlChecked = value ? "checked" : null;
        }
    }
    string? programChecked = null    ;
    bool ProgramMenuVisible
    {
        get
        {
            if (programChecked == "checked")
