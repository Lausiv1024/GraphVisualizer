                return true;
            }
            else
            {
                return false;
            }
        }
        set
        {
            programChecked = value ? "checked" : null;
        }
    }

    bool isIntarval = false;
    bool _isDirected = false;
    bool isDirected
    {
        get
        {
            return _isDirected;
        }
        set
        {
            _isDirected = value;
            Node.IsDirected = value;
        }
    }
    string createEdgeWarning = "";
